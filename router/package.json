{
  "name": "@oddessentials/odd-ai-reviewers",
  "version": "1.7.3",
  "description": "AI-powered code review CLI - run locally or in CI/CD pipelines",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "ai-review": "dist/main.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oddessentials/odd-ai-reviewers.git"
  },
  "keywords": [
    "ai",
    "code-review",
    "cli",
    "llm",
    "openai",
    "anthropic",
    "developer-tools"
  ],
  "author": "ODD Essentials",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oddessentials/odd-ai-reviewers/issues"
  },
  "homepage": "https://github.com/oddessentials/odd-ai-reviewers#readme",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=json --outputFile=test-results.json",
    "test:ci:coverage": "vitest run --coverage --reporter=json --reporter=dot --outputFile=test-results.json",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@actions/cache": "5.0.5",
    "@anthropic-ai/sdk": "0.71.2",
    "@octokit/rest": "^22.0.1",
    "commander": "^14.0.2",
    "minimatch": "^10.1.2",
    "openai": "^6.17.0",
    "typescript": "5.9.3",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "25.1.0",
    "@vitest/coverage-v8": "4.0.18",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
