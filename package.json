{
  "name": "odd-ai-reviewers",
  "version": "1.0.0",
  "description": "Extensible AI code review system with pluggable agents",
  "private": true,
  "type": "module",
  "workspaces": [
    "router"
  ],
  "scripts": {
    "build": "npm run build --workspace=router",
    "test": "npm run test --workspace=router",
    "test:ci": "npm run test:ci --workspace=router",
    "lint": "eslint .",
    "lint:strict": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "verify": "npm run lint && npm run format:check && npm run typecheck && npm run depcruise && npm run build",
    "depcruise": "depcruise router/src --config .dependency-cruiser.cjs",
    "prepare": "husky",
    "docs:manifest": "node scripts/generate-docs-manifest.cjs"
  },
  "keywords": [
    "code-review",
    "ai",
    "github-actions",
    "semgrep",
    "opencode"
  ],
  "author": "OddEssentials",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@eslint/js": "9.39.1",
    "@oddessentials/repo-standards": "7.1.1",
    "@typescript-eslint/eslint-plugin": "8.48.1",
    "@typescript-eslint/parser": "8.48.1",
    "dependency-cruiser": "17.3.7",
    "eslint": "9.39.1",
    "eslint-plugin-security": "3.0.1",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.4.2",
    "typescript": "5.7.3",
    "typescript-eslint": "8.48.1"
  },
  "lint-staged": {
    "*.{js,cjs,ts,mjs,json,md,yml,yaml}": [
      "prettier --check"
    ],
    "*.{js,cjs,ts,mjs}": [
      "eslint --max-warnings 0 --no-warn-ignored"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "overrides": {
    "@actions/glob": {
      "@actions/core": {
        "@actions/http-client": {
          "undici": "^6.23.0"
        }
      }
    }
  }
}
