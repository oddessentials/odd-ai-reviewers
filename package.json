{
  "name": "odd-ai-reviewers",
  "version": "1.0.0",
  "description": "Extensible AI code review system with pluggable agents",
  "private": true,
  "type": "module",
  "workspaces": [
    "router"
  ],
  "scripts": {
    "preinstall": "node scripts/preinstall-guard.cjs",
    "build": "pnpm --filter router build",
    "test": "pnpm --filter router test",
    "test:ci": "pnpm --filter router test:ci",
    "lint": "eslint .",
    "lint:strict": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "verify": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm depcruise && pnpm build",
    "depcruise": "depcruise router/src --config .dependency-cruiser.cjs",
    "prepare": "husky",
    "docs:manifest": "node scripts/generate-docs-manifest.cjs",
    "docs:linkcheck": "node scripts/linkcheck.cjs"
  },
  "keywords": [
    "code-review",
    "ai",
    "github-actions",
    "semgrep",
    "opencode"
  ],
  "author": "OddEssentials",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@eslint/js": "9.39.2",
    "@oddessentials/repo-standards": "7.1.1",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "dependency-cruiser": "17.3.7",
    "eslint": "9.39.2",
    "eslint-plugin-security": "3.0.1",
    "glob": "13.0.0",
    "globals": "17.2.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "markdown-link-check": "3.14.2",
    "prettier": "3.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0"
  },
  "lint-staged": {
    "docs/**/*.md": [
      "node scripts/regenerate-docs-manifest.cjs"
    ],
    "*.{js,cjs,ts,mjs,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,cjs,ts,mjs}": [
      "eslint --max-warnings 0 --no-warn-ignored"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.28.2",
  "overrides": {
    "@actions/glob": {
      "@actions/core": {
        "@actions/http-client": {
          "undici": "^6.23.0"
        }
      }
    }
  }
}
