# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Explicit text files
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.css text eol=lf
*.html text eol=lf

# Shell scripts must use LF
*.sh text eol=lf

# Husky hooks must use LF
.husky/* text eol=lf

# Git config files
.gitattributes text eol=lf
.gitignore text eol=lf
.editorconfig text eol=lf
.npmrc text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
